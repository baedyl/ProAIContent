# ──────────────────────────────────────────────────────────────────────────────
# ProAIContent – Environment Configuration Template
# Copy this file to `.env.local` and fill in the values before running the app.
# ──────────────────────────────────────────────────────────────────────────────

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# Authentication
NEXTAUTH_SECRET=replace-with-secure-random-string

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=public-anon-key
SUPABASE_SERVICE_ROLE_KEY=service-role-key-with-rpc-access

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
# Optional publishable key for future client-side usage
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_publishable_key

# Optional: Google OAuth (remove if unused)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
